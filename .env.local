# HemoStat Local Development Configuration
# This file is for local development with auto-detected platform settings
# The agents will automatically detect your OS and use the appropriate Docker socket

# Redis Configuration (local)
REDIS_HOST=localhost
REDIS_PORT=6379

# Logging
LOG_LEVEL=INFO

# Agent Configuration
AGENT_POLL_INTERVAL=30

# Thresholds
THRESHOLD_CPU_PERCENT=85
THRESHOLD_MEMORY_PERCENT=80

# Responder Configuration
RESPONDER_COOLDOWN_SECONDS=3600
RESPONDER_MAX_RETRIES_PER_HOUR=3
RESPONDER_DRY_RUN=false

# Alert Configuration
ALERT_ENABLED=true
ALERT_EVENT_TTL=3600
ALERT_MAX_EVENTS=100
ALERT_DEDUPE_TTL=60

# Dashboard Configuration
DASHBOARD_REFRESH_INTERVAL=5
DASHBOARD_MAX_EVENTS=100
DASHBOARD_AUTO_REFRESH=true

# Note: DOCKER_HOST is NOT set here - agents will auto-detect based on your OS:
# - Windows: npipe:////./pipe/docker_engine
# - Linux/macOS: unix:///var/run/docker.sock
